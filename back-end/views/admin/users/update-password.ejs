<!DOCTYPE html>

<html lang="fr">
    <%- include('../../components/head.ejs'); %>
    
    <body>
        <div class="container containerUpdatePassword">
            <%- include('../../components/header.ejs'); %>
            <main>  

                <main>  

                    <% if(errorUpdatePassword && errorUpdatePassword != null) { %>
                        <p class="error"><%= errorUpdatePassword %></p>
                    <% } %>
    
                    <% if(successUpdatePassword && successUpdatePassword != null) { %>
                        <p class="success"><%= successUpdatePassword %></p>
                    <% } %>
    
                    <h1>Mise à jour du mot de passe de <%= user ? user.lastname + ' ' + user.firstname : '' %></h1>
    
                    <form action="/users/<%= user._id %>/password/update/modify?_method=PUT" method="POST" enctype="multipart/form-data">
    
                        <div>
                            <input type="password" name="pswd" id="pswd" autocomplete="off" />
                            <label for="pswd">Nouveau Mot de passe</label>
                        </div>
    
                        <div>
                            <input type="password" name="pswdConfirm" id="pswdConfirm" autocomplete="off" />
                            <label for="pswdConfirm">Confirmation du Nouveau Mot de passe</label>
                        </div>
    
                        <button><span>Mettre à jour</span></button>
                    </form>
    
                    <a href="/users">Revenir à la liste des utilisateurs</a>
    
                </main>

            </main>
        </div>

        <script src="https://kit.fontawesome.com/10a6ffe905.js" crossorigin="anonymous"></script>
        <script src="/scripts/header.min.js"></script>

    </body>
</html>